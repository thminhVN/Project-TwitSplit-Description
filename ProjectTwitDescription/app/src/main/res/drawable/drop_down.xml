<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <rotate android:drawable="@drawable/ic_arrow_drop_down" android:fromDegrees="0" android:pivotX="50%" android:pivotY="50%" android:toDegrees="-90" />
    </item>
    <item android:state_selected="false">
        <rotate android:drawable="@drawable/ic_arrow_drop_down" android:fromDegrees="-90" android:pivotX="50%" android:pivotY="50%" android:toDegrees="0" />
    </item>
</selector>